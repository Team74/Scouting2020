<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataViewingActivity">

    <Button
        android:id="@+id/exportScouterNamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exportScouterNamesButtonPressed"
        android:text="Export Scouter Names To CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/exportTeamRoundDataButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exportTeamRoundDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exportTeamRoundDataButtonPressed"
        android:text="Export Team Round Data To CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/matchReportButton"
        app:layout_constraintEnd_toStartOf="@+id/importScouterNamesButton"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportScouterNamesButton" />

    <Button
        android:id="@+id/matchReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="matchReportButtonPressed"
        android:text="Match Report"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/dataViewingMenubutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportTeamRoundDataButton" />

    <Button
        android:id="@+id/dataViewingMenubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="menuButtonPressed"
        android:text="menu"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/matchReportButton" />

    <Button
        android:id="@+id/importScouterNamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="importScouterNamesButtonPressed"
        android:text="IMPORT sCOUTER nAMES TO csv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toEndOf="@+id/exportScouterNamesButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/importTeamRoundDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="importTeamRoundDataButtonPressed"
        android:text="IMPORT TEAM ROUND DATA TO CSV"
        app:layout_constraintBottom_toTopOf="@+id/matchReportButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exportScouterNamesButton"
        app:layout_constraintTop_toBottomOf="@+id/importScouterNamesButton" />

</android.support.constraint.ConstraintLayout>