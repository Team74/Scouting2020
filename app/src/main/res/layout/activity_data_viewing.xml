<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DataViewingActivity">

    <Button
        android:id="@+id/csvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="CSVNamesButton"
        android:text="CSV"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dataViewingMenubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="MenuButtonPressed"
        android:text="menu"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/matchReportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match Report"
        android:onClick="matchReportButtonPressed"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="155dp" />
</android.support.constraint.ConstraintLayout>