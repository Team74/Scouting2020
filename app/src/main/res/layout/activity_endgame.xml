<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndgameActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="114dp"
        android:layout_height="57dp"
        android:text="Endgame"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="210dp"
        android:layout_height="124dp"
        android:layout_marginEnd="100dp"
        android:onClick="opinionButtonPressed"
        android:text="Opinion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="597dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="2dp">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="192dp"
            android:layout_height="114dp"
            android:layout_weight="1"
            android:text="Climbed"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="220dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:text="Didn't Climb"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="269dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:text="Failed To Climb"
            android:textSize="30sp" />
    </RadioGroup>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="156dp"
        android:layout_height="88dp"
        android:checked="false"
        android:showText="false"
        android:splitTrack="false"
        android:textOff="Robot Broke Down"
        android:textOn="Robot Worked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        tools:checked="false" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:text="Robot Broke Down"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="251dp"
        android:layout_height="82dp"
        android:text="Which stage did they finish?"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switch1" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="437dp"
        android:layout_height="126dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.604">

        <RadioButton
            android:id="@+id/radioButton5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stage 1"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButton6"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Stage 2"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/radioButton7"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Stage 3"
            android:textSize="30sp" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText"
        android:layout_width="458dp"
        android:layout_height="200dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="244dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Notes"
        app:layout_constraintStart_toEndOf="@+id/radioGroup2"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>