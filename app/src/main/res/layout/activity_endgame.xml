<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/endgameConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EndgameActivity">

    <TextView
        android:id="@+id/endgameEndgameTextView"
        android:layout_width="152dp"
        android:layout_height="52dp"
        android:text="Endgame"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/endgameBrokeDownTextView"
        android:layout_width="222dp"
        android:layout_height="105dp"
        android:text="Robot Broke Down"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/endgameVerticalGuideline22.265625"
        app:layout_constraintTop_toTopOf="@+id/endgameHorizontalGuideline22.166666" />

    <TextView
        android:id="@+id/endgameStageFinishTextView"
        android:layout_width="219dp"
        android:layout_height="0dp"
        android:text="Which stage did they finish?"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/endgameVerticalGuideline22.265625"
        app:layout_constraintTop_toTopOf="@+id/endgameHorizontalGuideling55.5" />

    <EditText
        android:id="@+id/endgameNotesEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="text"
        android:text="Notes"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/endgameVerticalGuideline50"
        app:layout_constraintTop_toTopOf="@+id/endgameHorizontalGuideline66.66667" />

    <Button
        android:id="@+id/endgameOpinionButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="opinionButtonPressed"
        android:text="Opinion"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/endgameHorizontalGuideline66.66667"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/endgameVerticalGuideline66.69922"
        app:layout_constraintTop_toBottomOf="@+id/endgameTeleopButton" />

    <Button
        android:id="@+id/endgameAutonButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="autonButtonPressed"
        android:text="Auton"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/endgameHorizontalGuideline22.166666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/endgameVerticalGuideline66.69922"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/endgameTeleopButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="teleopButtonPressed"
        android:text="Teleop"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/endgameHorizontalGuideline44.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/endgameVerticalGuideline66.69922"
        app:layout_constraintTop_toBottomOf="@+id/endgameAutonButton" />

    <RadioGroup
        android:id="@+id/endgameClimbingRadioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/endgameHorizontalGuideline22.166666"
        app:layout_constraintEnd_toStartOf="@+id/endgameVerticalGuideline50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/endgameClimbedRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Climbed"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/endgameDidntRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Didn't Climb"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/endgameFailedRadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Failed To Climb"
            android:textSize="30sp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/endgameStageRadioGroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/endgameVerticalGuideline50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/endgameHorizontalGuideline66.66667">

        <RadioButton
            android:id="@+id/endgameStage1RadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stage 1"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/endgameStage2RadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stage 2"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/endgameStage3RadioButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Stage 3"
            android:textSize="30sp" />
    </RadioGroup>

    <Switch
        android:id="@+id/endgameRobotBrokeSwitch"
        android:layout_width="142dp"
        android:layout_height="115dp"
        android:checked="false"
        android:showText="false"
        android:splitTrack="false"
        android:textOff="Robot Broke Down"
        android:textOn="Robot Worked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endgameClimbingRadioGroup"
        tools:checked="false" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameVerticalGuideline22.265625"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.22265625" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameVerticalGuideline44.433594"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.44433594" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameVerticalGuideline50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameVerticalGuideline66.69922"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6669922" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameHorizontalGuideline22.166666"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.22166666" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameHorizontalGuideline44.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.445" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameHorizontalGuideling55.5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.555" />

    <android.support.constraint.Guideline
        android:id="@+id/endgameHorizontalGuideline66.66667"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.6666667" />

</android.support.constraint.ConstraintLayout>