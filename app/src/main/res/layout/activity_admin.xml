<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <Button
        android:id="@+id/exportScouterNamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="exportScouterNamesButtonPressed"
        android:text="Export Scouter Names To CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/exportTeamRoundDataButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/exportTeamRoundDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adminExportTeamRoundDataButtonPressed"
        android:text="Export Team Round Data To CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/exportTeamDataButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportScouterNamesButton" />

    <Button
        android:id="@+id/exportTeamDataButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adminExportTeamDataButtonPressed"
        android:text="Export Team Data To CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@id/importButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportTeamRoundDataButton" />

    <Button
        android:id="@+id/importButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="adminImportButtonPressed"
        android:text="Import CSV"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/addScouterName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exportTeamDataButton" />

    <Button
        android:id="@+id/dataViewingMenubutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:onClick="adminMenuButtonPressed"
        android:text="menu"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addScouterName" />

    <Button
        android:id="@+id/addScouterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toTopOf="@+id/dataViewingMenubutton"
        app:layout_constraintEnd_toStartOf="@+id/addScouterNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/importButton" />

    <TextView
        android:id="@+id/addScouterNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/dataViewingMenubutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias=".5"
        app:layout_constraintStart_toEndOf="@+id/addScouterName"
        app:layout_constraintTop_toBottomOf="@+id/importButton" />

</android.support.constraint.ConstraintLayout>