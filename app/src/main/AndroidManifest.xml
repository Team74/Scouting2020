<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.chaos.scouting2020">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ScoutingApplication"
        android:allowBackup="true"
        android:icon="@drawable/scouting2020_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/scouting2020_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".AdminPasswordActivity" />
        <activity android:name=".AdminActivity" />
        <activity android:name=".ReportFiltersActivity" />
        <activity android:name=".TeamRoundDataReportActivity" />
        <activity android:name=".PitScoutingMapActivity" />
        <activity android:name=".PitScoutingMainActivity" />
        <activity android:name=".PitScoutingReportActivity" />
        <activity android:name=".OpinionReportActivity" />
        <activity android:name=".MatchReportActivity" />
        <activity android:name=".DataViewingActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".PitScoutingActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".AutonActivity" />
        <activity android:name=".TeleopActivity" />
        <activity android:name=".EndgameActivity" />
        <activity android:name=".OpinionActivity" />
        <activity android:name=".MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>